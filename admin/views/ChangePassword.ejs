<form id="loginForm" method="post" action="/changepassword">
<div class="card text-center">
  <div class="card-header">
<div class="text-center w-75 m-auto">
  <p class="errmssg"><%= ErrMssg %></p>
    <p class="text-muted mb-4 mt-3">Enter correct otp and password to change the password</p>
</div>
  </div>
 
  <div class="card-body">

    <div class="form-group mb-3">
        <label>OTP</label>
        <input class="form-control" type="text" name="otp" placeholder="Enter Otp" autocomplete="off">
         <span id="validTime"></span>
        <div class="text-danger email"></div>
    </div>
    <div class="form-group mb-3">
        <label>Password</label>
        <input class="form-control" type="password" name="password" placeholder="Password" autocomplete="off">
        <div class="text-danger password"></div>
    </div>
    <div class="form-group mb-0 text-center">
        <button id="submitLoginForm"  class="btn btn-primary btn-block" type="submit">Change Password</button>
    </div>
  </div>
</div>
</form>

<script>
 
  let i ='<%- timer%>'
 
  setInterval(()=>{
    if(i>=0){
      document.getElementById("validTime").innerHTML= i<=9?"00:0"+i:"00:" + i;
    }
    if(i==-1){
      document.getElementById("validTime").innerHTML="<span style='color:red'>OTP Timeout!,Redirecting...</span>";
    } 
    if(i==-3){
      return window.location="/forgotpassword";
    } 
    i--;
    console.log(i);
    },1000)
  
</script>

